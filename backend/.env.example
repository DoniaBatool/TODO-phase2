# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Example for Neon Serverless PostgreSQL:
# DATABASE_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Application Configuration
DEBUG=true
APP_NAME=Todo API
API_V1_PREFIX=/api

# Database Pool Settings (optional, has defaults)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30

# Authentication
BETTER_AUTH_SECRET=generate-with-python-secrets-token_urlsafe-32
JWT_ALGORITHM=HS256
JWT_EXPIRY_DAYS=7

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all origins
# Example: CORS_ORIGINS=https://todo-phase2.vercel.app,https://todo-phase2-git-main-donia-batools-projects.vercel.app
CORS_ORIGINS=*
